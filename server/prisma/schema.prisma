datasource postgres {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime   @default(now())
  email     String?
  employee  Employee[]
  firstName String?
  id        String     @id @default(cuid())
  lastName  String?
  lastSeen  DateTime?
  onsipId   String?
  password  String
  roles     Json
  updatedAt DateTime   @updatedAt
  username  String     @unique
}

model Task {
  createdAt  DateTime       @default(now())
  estimation Int?
  id         String         @id @default(cuid())
  startDate  DateTime
  status     EnumTaskStatus
  title      String
  updatedAt  DateTime       @updatedAt
}

model LeadSource {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
}

model Route {
  createdAt DateTime   @default(now())
  employees Employee[]
  id        String     @id @default(cuid())
  updatedAt DateTime   @updatedAt
}

model Employee {
  assignedRoutes     Route[]
  createdAt          DateTime  @default(now())
  email              String?
  externalFields     Json?
  id                 String    @id @default(cuid())
  onsipName          String?
  serviceMonsterName String?
  startDate          DateTime?
  startedDate        DateTime?
  test               String?
  updatedAt          DateTime  @updatedAt
  user               User      @relation(fields: [userId], references: [id])
  userId             String
}

model Address {
  city         EnumAddressCity?
  createdAt    DateTime         @default(now())
  geopoint     String?
  id           String           @id @default(cuid())
  state        String?
  street       String?
  streetNumber String?
  updatedAt    DateTime         @updatedAt
  zipcode      String?
}

enum EnumTaskStatus {
  new
  pending
  onHold
  ongoing
  done
}

enum EnumAddressCity {
  Tx
}
